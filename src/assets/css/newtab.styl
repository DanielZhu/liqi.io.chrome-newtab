body
    background-color: #f6f6f6
    color: #666
    font-family: -apple-system, BlinkMacSystemFont,"Helvetica Neue","PingFang SC","STHeiti", "Helvetica","Arial","Verdana","sans-serif","Microsoft YaHei"
a
    color: #638CDC
    text-decoration: none
#app
    position: absolute
    top: 0
    left: 0
    bottom: 0
    width: 100%
    &:hover
        .btn-icon
            opacity: 0.2
.tools
    position: absolute
    top: 20px
    right: 30px
    width: 16px
    text-align: center
    .refresh-quote-btn, .see-liqi-site-btn, .about-extension-and-author-btn
        position: relative
        padding: 4px 0
        .btn-icon
            position: relative
            text-align: center
            width: 16px
            height: 16px
            opacity: 0
            transition: .2s all ease-in
            cursor: pointer
            &:hover
                opacity: 0.6 !important
#quote-mark
    position: absolute
    top: 0
    left: 0
    width: 80px
    margin-top: -30px
    margin-left: -35px
    -webkit-user-select: none
    img
        position: relative
        width: 100%
        text-align: center

.quote
    position: relative
    margin: 120px auto 0 auto
    color: #666
    font-weight: lighter
    line-height: 1.6
    width: 45%
    font-size: 1.875rem
    .reload-extension
        position: relative
        width: 100%
        margin: 30% auto 0 auto
        .reload-extension-my-fault
            position: relative
            width: 100%
            font-size: 20px
            padding: 10px 2px
            text-align: left
            .cry-face
                font-size: 40px
                margin-right: 20px
        .reload-extension-btn
            position: relative
            width: 90%
            font-size: 20px
            font-weight: lighter
            color: #666
            border: 1px solid #333
            padding: 5px 15px
            text-align: center
    .quote-author
        text-align: right
        display: block
        font-size: 1.25rem
        color: #666
        font-weight: bolder
        transition: .1s all ease-in
        margin-right: 16px
        font-family: -apple-system, BlinkMacSystemFont,"Helvetica Neue","PingFang SC Medium","STHeiti", "Helvetica","Arial","Verdana","sans-serif","Microsoft YaHei"
        &:hover
            color: #638cdc !important
